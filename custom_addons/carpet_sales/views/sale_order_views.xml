<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_carpet" model="ir.ui.view">
        <field name="name">sale.order.form.carpet</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="carpet_width" optional="show"/>
                <field name="carpet_height" optional="show"/>
                <field name="carpet_area" optional="hide" string="Total Area (mÂ²)"/>
                <field name="carpet_qty" string="Carpet Quantity"/>
            </xpath>
        </field>
    </record>
</odoo>