<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_instagram_config_form" model="ir.ui.view">
        <field name="name">instagram.config.form</field>
        <field name="model">instagram.config</field>
        <field name="arch" type="xml">
            <form string="Instagram Configuration">
                <header>
                    <button name="action_test_connection" string="Test Connection" 
                            type="object" class="oe_highlight"/>
                    <button name="action_fetch_lead_forms" string="Fetch Lead Forms" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'connected'"/>
                    <button name="action_sync_leads" string="Sync Leads Now" 
                            type="object" class="btn-primary"
                            invisible="state != 'connected'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_instagram_lead_form)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-list">
                            <field name="lead_count" widget="statinfo" string="Leads"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="page_name" invisible="page_name == False"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="last_sync"/>
                            <field name="sync_interval"/>
                        </group>
                    </group>
                    <group string="Facebook/Instagram Settings">
                        <field name="page_id"/>
                        <field name="access_token" password="True"/>
                    </group>
                    <notebook>
                        <page string="Lead Forms">
                            <field name="lead_form_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="lead_count"/>
                                    <field name="last_sync"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Error" invisible="error_message == False">
                            <field name="error_message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_instagram_config_tree" model="ir.ui.view">
        <field name="name">instagram.config.tree</field>
        <field name="model">instagram.config</field>
        <field name="arch" type="xml">
            <list string="Instagram Configurations">
                <field name="name"/>
                <field name="page_name"/>
                <field name="lead_count"/>
                <field name="last_sync"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_instagram_config" model="ir.actions.act_window">
        <field name="name">Instagram Configuration</field>
        <field name="res_model">instagram.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_instagram_config" 
              name="Configuration" 
              parent="menu_instagram_root" 
              action="action_instagram_config" 
              sequence="10"/>
</odoo>