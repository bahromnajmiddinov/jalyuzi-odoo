<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instagram_lead_form_form" model="ir.ui.view">
        <field name="name">instagram.lead.form.form</field>
        <field name="model">instagram.lead.form</field>
        <field name="arch" type="xml">
            <form string="Lead Form">
                <header>
                    <button name="action_sync_leads" string="Sync Leads" 
                            type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="form_id"/>
                            <field name="config_id"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="leads_count"/>
                            <field name="lead_count"/>
                            <field name="last_sync"/>
                            <field name="auto_sync"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Synced Leads">
                            <field name="lead_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="contact_name"/>
                                    <field name="email_from"/>
                                    <field name="phone"/>
                                    <field name="create_date"/>
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instagram_lead_form_tree" model="ir.ui.view">
        <field name="name">instagram.lead.form.tree</field>
        <field name="model">instagram.lead.form</field>
        <field name="arch" type="xml">
            <list string="Lead Forms">
                <field name="name"/>
                <field name="config_id"/>
                <field name="status"/>
                <field name="lead_count"/>
                <field name="last_sync"/>
                <field name="auto_sync"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_instagram_lead_form" model="ir.actions.act_window">
        <field name="name">Lead Forms</field>
        <field name="res_model">instagram.lead.form</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_instagram_lead_form" 
              name="Lead Forms" 
              parent="menu_instagram_root" 
              action="action_instagram_lead_form" 
              sequence="20"/>
</odoo>