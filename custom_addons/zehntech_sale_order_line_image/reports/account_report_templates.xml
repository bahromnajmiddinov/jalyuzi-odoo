<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="after">
            <th t-if="o.show_product_image_setting" class="text-start">Product Image</th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="after">
            <td t-if="o.show_product_image_setting">
                <img t-if="line.show_product_image and line.product_id.image_128" t-att-src="image_data_uri(line.product_id.image_128)" style="max-width: 50px; max-height: 50px;"/>
                <img t-if="line.show_product_image and not line.product_id.image_128" src="/web/static/img/placeholder.png" style="max-width: 50px; max-height: 50px;"/>
            </td>
        </xpath>
    </template>
</odoo>
