<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content_inherit" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//th[@id='product_name_header']" position="after">
            <th t-if="env['ir.config_parameter'].sudo().get_param('sale_order_line_image.show_product_image_sale_order')" class="text-start">Product Image</th>
        </xpath>
        <xpath expr="//td[@id='product_name']" position="after">
            <td t-if="env['ir.config_parameter'].sudo().get_param('sale_order_line_image.show_product_image_sale_order')">
                <t t-if="not line.is_downpayment">
                    <img t-if="line.product_id.image_128" t-att-src="image_data_uri(line.product_id.image_128)" style="max-width: 50px; max-height: 50px;"/>
                    <img t-if="not line.product_id.image_128" src="/web/static/img/placeholder.png" style="max-width: 50px; max-height: 50px;"/>
                </t>
            </td>
        </xpath>
    </template>
</odoo>
