<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_image" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.image</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add image column in list view -->
            <xpath expr="//field[@name='order_line']//list//field[@name='product_template_id']" position="after">
                <field name="show_product_image" column_invisible="1"/>
                <field name="product_image" widget="image" options="{'size': [50, 50]}" 
                       column_invisible="not parent.show_product_image_setting"
                       invisible="not show_product_image"/>
            </xpath>
            <!-- Add the setting field to sale order -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="show_product_image_setting" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
